<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/backgroun"
    tools:context=".mainMenu">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:src="@drawable/baner"
        android:background="@drawable/shadow"
        android:scaleType="fitXY"/>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">
    <ImageButton
        android:id="@+id/cal_ambulan"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="45dp"
        android:src="@drawable/ambulance"
        android:background="@drawable/backgroun"
        android:scaleType="fitXY"
        android:tooltipText="call ambulan"/>

    <ImageButton
        android:id="@+id/hospital"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="50dp"
        android:background="@drawable/backgroun"
        android:scaleType="fitXY"
        android:src="@drawable/hospital"
        android:tooltipText="Hospital" />

</LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageButton
            android:id="@+id/dokter"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginTop="50dp"
            android:layout_marginLeft="45dp"
            android:src="@drawable/doctor"
            android:background="@drawable/backgroun"
            android:scaleType="fitXY"
            android:tooltipText="Schadule dokter"/>

        <ImageButton
            android:id="@+id/obat"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginTop="50dp"
            android:layout_marginLeft="50dp"
            android:background="@drawable/backgroun"
            android:scaleType="fitXY"
            android:src="@drawable/pills"
            android:tooltipText="Obat" />

    </LinearLayout>

</LinearLayout>